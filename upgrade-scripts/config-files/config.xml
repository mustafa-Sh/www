    </platform>
    <plugin name="cordova-plugin-statusbar" spec="2.4.3" />
    <plugin name="cordova-plugin-device" spec="3.0.0" />
    <plugin name="cordova-plugin-ionic-webview" spec="5.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-plugin-email-composer" spec="~0.9.2">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-device-orientation" spec="^2.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="3.1.0" />
    <plugin name="cordova-plugin-telerik-imagepicker" spec="2.3.5" />
    <plugin name="cordova-plugin-uniquedeviceid" spec="1.3.2" />
    <plugin name="cordova-plugin-crop" spec="0.4.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="8.1.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-camera" spec="https://github.com/Azentio-Software/cordova-plugin-camera-8.0.0.git">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
        <variable name="ANDROIDX_CORE_VERSION" value="1.6.+" />
    </plugin>
    <engine name="browser" spec="5.0.4" />
</widget>
